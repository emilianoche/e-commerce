<div class="row column text-center">
<h2>Nuestros más nuevos productos</h2>
<hr>
</div>

<div class="row small-up-2 large-up-4">

<% @products.each do |product| %>
  <div class="column">
   <%= image_tag product.image.url(:thumb) %>
    <h5><%= product.description %></h5>
    <p><%= product.price %></p>
    <% if user_signed_in? %>
    <a href="#" class="button expanded">Buy</a>
    <% else %>
  <%= link_to "Para comprar debe iniciar sesión", new_user_session_path, :class => 'navbar-link'  %>
<% end %>
  </div>
<% end %>

</div>
